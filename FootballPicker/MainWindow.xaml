<Window x:Class="FootballPicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FootballPicker"
        mc:Ignorable="d"
        Title="Football Picker" Height="350" Width="525">
    <Grid Background="Chocolate">
        <ListBox Name="lbThisWeekWinners" HorizontalAlignment="Stretch" ItemsSource="{Binding Path=ThisWeekWinners}" Margin="74,38,63,0" Height="230" VerticalAlignment="Top">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Predicted}" />
                        <TextBlock Grid.Column="1" Text="{Binding Confidence}" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>

</Window>
